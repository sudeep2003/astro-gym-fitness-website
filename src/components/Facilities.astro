---
import { Image } from 'astro:assets';
import { facilities } from '../data/siteData';
---

<section id="facilities" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Our Facilities</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        World-class equipment and spaces designed for your success
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {facilities.map((facility) => (
        <div class="group bg-slate-800 rounded-xl overflow-hidden border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105">
          <div class="relative h-64 overflow-hidden">
            <Image
              src={facility.image}
              alt={facility.title}
              width={800}
              height={600}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4">
              <h3 class="text-2xl font-bold text-white mb-2">{facility.title}</h3>
            </div>
          </div>
          <div class="p-6">
            <p class="text-gray-400 leading-relaxed">{facility.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

