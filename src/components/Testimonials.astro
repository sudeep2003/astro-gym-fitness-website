---
import { testimonials } from '../data/siteData';
---

<section id="testimonials" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">What Our Members Say</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Real stories from real people achieving their fitness goals
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map((testimonial) => (
        <div class="bg-slate-800 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
          <div class="flex mb-6 gap-1">
            {Array.from({ length: testimonial.rating }).map(() => (
              <i class="ri-star-fill text-orange-500 text-xl"></i>
            ))}
          </div>
          <p class="text-gray-300 mb-6 italic leading-relaxed">"{testimonial.content}"</p>
          <div class="pt-4 border-t border-slate-700">
            <div class="font-bold text-white mb-1">{testimonial.name}</div>
            <div class="text-sm text-gray-400">{testimonial.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

