---
import { classes } from '../data/siteData';
---

<section id="classes" class="py-20 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Our Classes</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Find the perfect workout for your fitness level and goals
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {classes.map((classItem) => (
        <div class="bg-slate-800 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105">
          <div class="flex justify-between items-start mb-6">
            <h3 class="text-2xl font-bold text-white">{classItem.name}</h3>
            <span class="bg-orange-500 text-white text-xs px-3 py-1 rounded-full font-semibold whitespace-nowrap">
              {classItem.difficulty}
            </span>
          </div>
          <p class="text-gray-400 mb-6 leading-relaxed">{classItem.description}</p>
          <div class="flex items-center justify-between">
            <div class="flex items-center text-gray-500 gap-2">
              <i class="ri-time-line text-orange-500"></i>
              <span>{classItem.duration}</span>
            </div>
            <a
              href="/contact"
              class="text-orange-500 hover:text-orange-400 font-semibold flex items-center gap-2"
            >
              Book Now
              <i class="ri-arrow-right-line"></i>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-16">
      <a
        href="/classes"
        class="inline-flex items-center gap-3 bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105"
      >
        View All Classes
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </div>
</section>

