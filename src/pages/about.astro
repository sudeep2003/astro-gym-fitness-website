---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { siteData, trainers, history } from "../data/siteData";
---

<Layout
  title={`About Us - ${siteData.name}`}
  description="Learn about our mission, values, and expert trainers"
>
  <!-- Hero Section -->
  <section
    class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          About {siteData.name}
        </h1>
        <p class="text-xl text-gray-300">
          We're dedicated to helping you achieve your fitness goals and live a
          healthier life
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold text-white mb-8 text-center">
          Our Mission
        </h2>
        <div class="prose prose-invert max-w-none">
          <p class="text-xl text-gray-300 mb-6">
            At {siteData.name}, we believe that fitness is not just about
            physical strength, but about building confidence, discipline, and a
            positive mindset. Our mission is to create an inclusive community
            where everyone feels welcome and supported on their fitness journey.
          </p>
          <p class="text-lg text-gray-400 mb-6">
            We provide state-of-the-art facilities, expert guidance, and a
            supportive environment that empowers our members to push their
            limits and achieve extraordinary results.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Our Values
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-trophy-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Excellence</h3>
          <p class="text-gray-400 leading-relaxed">
            We strive for excellence in everything we do, from our facilities to
            our service
          </p>
        </div>
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-hand-heart-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Community</h3>
          <p class="text-gray-400 leading-relaxed">
            Building a supportive community where everyone can thrive together
          </p>
        </div>
        <div
          class="bg-slate-800 p-8 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-20 h-20 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-6"
          >
            <i class="ri-focus-3-line text-4xl text-orange-500"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">Results</h3>
          <p class="text-gray-400 leading-relaxed">
            Focused on delivering real, measurable results for every member
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- History/Timeline Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Our Journey
      </h2>
      <div class="max-w-4xl mx-auto">
        <div class="relative">
          <!-- Timeline Line -->
          <div
            class="absolute left-8 top-0 bottom-0 w-0.5 bg-orange-500/30 hidden md:block"
          >
          </div>

          <div class="space-y-12">
            {
              history.map((milestone, index) => (
                <div class="relative flex items-start gap-6">
                  <div class="hidden md:block shrink-0">
                    <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center border-4 border-slate-900">
                      <span class="text-white font-bold text-sm">
                        {milestone.year}
                      </span>
                    </div>
                  </div>
                  <div class="flex-1 bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
                    <div class="md:hidden mb-2">
                      <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                        {milestone.year}
                      </span>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-2">
                      {milestone.title}
                    </h3>
                    <p class="text-gray-300 leading-relaxed">
                      {milestone.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">
        Expert Trainers
      </h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Meet our certified professionals dedicated to your success
      </p>
      <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-8">
        {
          trainers.map((trainer, index) => {
            let className = "";
            if (index + 1 == 4) {
              className = "lg:col-start-2";
            }
            else if (index + 1 == 5) {
              className = "md:col-start-2 lg:col-start-4";
            }
            return (
              <div class={`bg-slate-900 p-8 rounded-xl border border-slate-700 hover:border-orange-500 transition-all transform hover:scale-105 md:col-span-2 ${className}`}>
                <div class="text-center mb-6">
                  <div class="w-40 h-40 rounded-full mx-auto mb-4 overflow-hidden border-4 border-orange-500/20">
                    <Image
                      src={trainer.image}
                      alt={`${trainer.name} - ${trainer.role}`}
                      width={400}
                      height={400}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <h3 class="text-xl font-bold text-white mb-2">
                    {trainer.name}
                  </h3>
                  <p class="text-orange-500 mb-1 font-semibold">
                    {trainer.role}
                  </p>
                  <p class="text-gray-400 text-sm mb-3">
                    {trainer.specialization}
                  </p>
                  <p class="text-gray-500 text-xs">
                    {trainer.experience} experience
                  </p>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed mb-4 text-center">
                  {trainer.bio}
                </p>
                <div class="flex flex-wrap gap-2 justify-center">
                  {trainer.certifications.map((cert) => (
                    <span class="bg-slate-800 text-gray-300 text-xs px-3 py-1 rounded-full border border-slate-700">
                      {cert}
                    </span>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
