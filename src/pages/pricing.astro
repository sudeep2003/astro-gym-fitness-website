---
import Layout from '../layouts/Layout.astro';
import PricingPlans from '../components/PricingPlans.astro';
import { siteData, pricingPlans, paymentOptions } from '../data/siteData';
---

<Layout title={`Pricing - ${siteData.name}`} description="Choose the perfect membership plan for your fitness journey">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Membership Plans</h1>
        <p class="text-xl text-gray-300">
          Flexible pricing options to fit your lifestyle and fitness goals
        </p>
      </div>
    </div>
  </section>

  <PricingPlans showHeading={false} />

  <!-- Comparison Table Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">Plan Comparison</h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Compare features across all membership plans
      </p>
      <div class="bg-slate-900 rounded-xl border border-slate-700 overflow-x-auto">
        <table class="w-full min-w-[600px]">
          <thead>
            <tr class="border-b border-slate-700">
              <th class="px-6 py-4 text-left text-white font-semibold">Features</th>
              {pricingPlans.map((plan) => (
                <th class="px-6 py-4 text-center text-white font-semibold">
                  {plan.name}
                  {plan.popular && (
                    <span class="block text-orange-500 text-sm font-normal mt-1">Most Popular</span>
                  )}
                </th>
              ))}
            </tr>
          </thead>
          <tbody class="text-gray-300">
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">Gym Access</td>
              {pricingPlans.map(() => (
                <td class="px-6 py-4 text-center">
                  <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
                </td>
              ))}
            </tr>
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">24/7 Access</td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
            </tr>
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">Group Classes</td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
            </tr>
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">Personal Trainer</td>
              <td class="px-6 py-4 text-center">
                <span class="text-gray-400 text-sm">Consultation only</span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-gray-400 text-sm">Consultation included</span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-orange-500 font-semibold">Unlimited</span>
              </td>
            </tr>
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">Nutrition Guidance</td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-orange-500 font-semibold">Custom Plans</span>
              </td>
            </tr>
            <tr class="border-b border-slate-700/50">
              <td class="px-6 py-4 font-medium">Spa & Recovery</td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
            </tr>
            <tr>
              <td class="px-6 py-4 font-medium">Priority Booking</td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-close-circle-line text-gray-600 text-xl"></i>
              </td>
              <td class="px-6 py-4 text-center">
                <i class="ri-checkbox-circle-fill text-orange-500 text-xl"></i>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Payment Options Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">Payment Options</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12">
        {paymentOptions.plans.map((plan) => (
          <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all">
            <h3 class="text-2xl font-bold text-white mb-3">{plan.type}</h3>
            <p class="text-gray-300 leading-relaxed">{plan.description}</p>
          </div>
        ))}
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="bg-slate-800 p-8 rounded-xl border border-slate-700 mb-8">
          <h3 class="text-2xl font-bold text-white mb-6 text-center">Accepted Payment Methods</h3>
          <div class="flex flex-wrap justify-center gap-4">
            {paymentOptions.methods.map((method) => (
              <div class="bg-slate-900 px-6 py-3 rounded-lg border border-slate-700">
                <span class="text-gray-300 font-medium">{method}</span>
              </div>
            ))}
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-orange-500/10 border border-orange-500/30 p-6 rounded-xl text-center">
            <i class="ri-shield-check-line text-4xl text-orange-500 mb-4"></i>
            <h4 class="text-xl font-bold text-white mb-2">Money-Back Guarantee</h4>
            <p class="text-gray-300">{paymentOptions.guarantee}</p>
          </div>
          <div class="bg-orange-500/10 border border-orange-500/30 p-6 rounded-xl text-center">
            <i class="ri-gift-line text-4xl text-orange-500 mb-4"></i>
            <h4 class="text-xl font-bold text-white mb-2">Free Trial</h4>
            <p class="text-gray-300">{paymentOptions.trial}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-6">
        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
          <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
            <i class="ri-question-line text-orange-500"></i>
            Can I cancel my membership anytime?
          </h3>
          <p class="text-gray-400 leading-relaxed">
            Yes, you can cancel your membership at any time with 30 days notice. No long-term contracts required.
          </p>
        </div>
        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
          <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
            <i class="ri-question-line text-orange-500"></i>
            Do you offer trial periods?
          </h3>
          <p class="text-gray-400 leading-relaxed">
            Yes! We offer a 7-day free trial for new members. Come in and experience everything we have to offer.
          </p>
        </div>
        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
          <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
            <i class="ri-question-line text-orange-500"></i>
            Are personal training sessions included?
          </h3>
          <p class="text-gray-400 leading-relaxed">
            Personal training sessions are included in Premium and Elite plans. Basic members can purchase sessions separately.
          </p>
        </div>
        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-orange-500 transition-all">
          <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
            <i class="ri-question-line text-orange-500"></i>
            What payment methods do you accept?
          </h3>
          <p class="text-gray-400 leading-relaxed">
            We accept all major credit cards, debit cards, and bank transfers. Monthly payments are automatically processed.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-linear-to-r from-orange-500 to-orange-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Contact us today to schedule a tour and start your fitness journey
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white text-orange-500 hover:bg-slate-100 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Contact Us
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>

