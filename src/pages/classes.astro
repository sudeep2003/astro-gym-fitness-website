---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { classes, siteData, fullSchedule } from '../data/siteData';
---

<Layout title={`Classes - ${siteData.name}`} description="Browse our wide range of fitness classes">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Our Classes</h1>
        <p class="text-xl text-gray-300">
          Find the perfect workout for your fitness level and goals
        </p>
      </div>
    </div>
  </section>

  <!-- Detailed Classes Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {classes.map((classItem) => (
          <div class="bg-slate-900 rounded-xl border border-slate-700 overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
              <!-- Image -->
              <div class="relative h-64 lg:h-auto">
                <Image
                  src={classItem.image}
                  alt={classItem.name}
                  width={800}
                  height={600}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute top-4 right-4">
                  <span class="bg-orange-500 text-white text-sm px-4 py-2 rounded-full font-semibold">
                    {classItem.difficulty}
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-8">
                <div class="flex items-center justify-between mb-4">
                  <h2 class="text-3xl font-bold text-white">{classItem.name}</h2>
                  <div class="flex items-center text-gray-400 gap-2">
                    <i class="ri-time-line text-orange-500"></i>
                    <span>{classItem.duration}</span>
                  </div>
                </div>
                
                <p class="text-gray-300 text-lg mb-4 leading-relaxed">{classItem.detailedDescription}</p>
                
                <div class="mb-6">
                  <p class="text-white font-semibold mb-2">Trainer: <span class="text-orange-500">{classItem.trainer}</span></p>
                  <p class="text-gray-400 text-sm">What to expect: {classItem.whatToExpect}</p>
                </div>
                
                <div class="mb-6">
                  <h4 class="text-white font-semibold mb-3">Key Benefits:</h4>
                  <ul class="grid grid-cols-2 gap-2">
                    {classItem.benefits.map((benefit) => (
                      <li class="flex items-center gap-2 text-gray-300 text-sm">
                        <i class="ri-checkbox-circle-fill text-orange-500"></i>
                        {benefit}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <a
                  href="/contact"
                  class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold transition-all"
                >
                  Book This Class
                  <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Full Schedule Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">Full Weekly Schedule</h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Plan your week with our complete class schedule
      </p>
      <div class="bg-slate-800 p-8 rounded-xl border border-slate-700 overflow-x-auto">
        <table class="w-full text-left min-w-[800px]">
          <thead>
            <tr class="border-b border-slate-700">
              <th class="pb-4 pr-4 text-white font-semibold">Time</th>
              <th class="pb-4 px-4 text-white font-semibold">Monday</th>
              <th class="pb-4 px-4 text-white font-semibold">Tuesday</th>
              <th class="pb-4 px-4 text-white font-semibold">Wednesday</th>
              <th class="pb-4 px-4 text-white font-semibold">Thursday</th>
              <th class="pb-4 px-4 text-white font-semibold">Friday</th>
              <th class="pb-4 px-4 text-white font-semibold">Saturday</th>
              <th class="pb-4 px-4 text-white font-semibold">Sunday</th>
            </tr>
          </thead>
          <tbody class="text-gray-300">
            {(() => {
              const allTimes = new Set();
              Object.values(fullSchedule).forEach(day => {
                day.forEach(slot => allTimes.add(slot.time));
              });
              const sortedTimes = Array.from(allTimes).sort((a, b) => {
                const timeA = a.replace(' AM', '').replace(' PM', '').split(':');
                const timeB = b.replace(' AM', '').replace(' PM', '').split(':');
                const hourA = parseInt(timeA[0]) + (a.includes('PM') && timeA[0] !== '12' ? 12 : 0);
                const hourB = parseInt(timeB[0]) + (b.includes('PM') && timeB[0] !== '12' ? 12 : 0);
                return hourA - hourB || parseInt(timeA[1]) - parseInt(timeB[1]);
              });
              
              return sortedTimes.map((time) => {
                const findClass = (daySchedule) => daySchedule.find(slot => slot.time === time);
                
                return (
                  <tr class="border-b border-slate-700/50 hover:bg-slate-700/30 transition-colors">
                    <td class="py-3 pr-4 font-semibold text-white">{time}</td>
                    {[fullSchedule.monday, fullSchedule.tuesday, fullSchedule.wednesday, fullSchedule.thursday, fullSchedule.friday, fullSchedule.saturday, fullSchedule.sunday].map((daySchedule) => {
                      const classSlot = findClass(daySchedule);
                      return (
                        <td class="py-3 px-4">
                          {classSlot ? (
                            <div>
                              <div class="font-medium">{classSlot.class}</div>
                              <div class="text-xs text-gray-400">{classSlot.trainer}</div>
                            </div>
                          ) : (
                            <span class="text-gray-600">-</span>
                          )}
                        </td>
                      );
                    })}
                  </tr>
                );
              });
            })()}
          </tbody>
        </table>
        <p class="text-gray-400 text-center mt-6 text-sm">
          * Schedule may vary. Please contact us for the most up-to-date class times or to book a spot.
        </p>
      </div>
    </div>
  </section>
</Layout>

